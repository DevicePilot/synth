{
    "restart_log": true,
    "engine": {
        "type": "sim",
        "start_time": "now",
        "end_time": "+PT33M"    // End exactly as next button-press due
    },
    "events": [
        {
            "at": "PT0S",
            "action": {
                "client.create_filters": [
{
"$description": "Button Press 2",
"where": "button == 1",
"monitor": true,
"action": {
"$description": "Notify Synth of Button Press",
"body": "{\n\"deviceId\" : \"{device.$id}\",\n\"eventName\" : \"notifyButtonPress2\"\n}",
"headers": {
"Instancename": "<<<instance_name>>>",
"Key": "<<<web_key>>>"
},
"method": "POST",
"target": "request",
"url": "https://synth.devicepilot.com/event"
}
}
]
}
}, {
"at": "PT0S",
"repeats": 500,
"interval": "PT0H",
"action": {
"create_device": {
"functions": {
"variable": [
{
"name": "count",
"timefunction": {
"count": {
"interval": "PT1M"
}
}
}, {
"name": "button",
"timefunction": {
"pulsewave": {
"interval": "PT11M",
"transition" : "PT1M"
}
}
}
],
"expect": {
"event_name": "notifyButtonPress2",
"timefunction": {
"pulsewave": {
"interval": "PT11M",
"transition" : "PT1M"
}
},
"slack_webhook": "https://hooks.slack.com/services/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"
}
}
}
}
}, {
"action": {
"create_device": {
"functions": {
"heartbeat" : {
"interval" : "PT10S"
}
}
}
}
}
]
}